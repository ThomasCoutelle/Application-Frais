{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Utilisateur list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Dateembauche</th>
                <th>Login</th>
                <th>Mdp</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.cp }}</td>
                <td>{{ entity.ville }}</td>
                <td>{% if entity.dateEmbauche %}{{ entity.dateEmbauche|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.mdp }}</td>
                <td>{{ entity.role }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('utilisateur_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('utilisateur_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('utilisateur_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <a href="{{ path('projetGSB_admin_index') }}">
                Return to home page
            </a>
        </li>
    </ul>
    {% endblock %}
