                <th>Repasmidi</th>
                <th>Nuitee</th>
                <th>Etape</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('region_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.libelle }}</td>
                <td>{{ entity.repasMidi }}</td>
                <td>{{ entity.nuitee }}</td>
                <td>{{ entity.etape }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('region_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('region_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
